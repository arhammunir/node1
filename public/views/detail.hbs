		<label for="movie">
		 MOVIE: <input type="radio" name="choose" id="movie" value="movie"></label>
		
		<label for="tv-show">
		 TV_SHOW: <input type="radio" name="choose" id="tv-show" value="tv-show"></label>

		 <label for="web-series">
		 WEB-SERIES: <input type="radio" name="choose" id="web-series" value="web-series"></label>


		<input type="text" name="language" placeholder="put language here.." class="input">
		<input type="tex" name="description" placeholder="write description here...." class="des">
		<input type="submit" value="UPLOAD" class="btn">
	</form>

</body>
</html>
