    <link rel="stylesheet" href="../css/detail.css">
</head>
<body>

	<form method="POST" action="/upload_details" enctype="multipart/form-data">


		<input type="text" name="id" value="{{id}}" readonly="readonly" class="input">
		<input type="file" name="file" accept="image/*"  class="choose">
